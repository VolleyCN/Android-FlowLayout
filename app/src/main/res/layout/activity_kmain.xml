<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.volley.flowlayout.KMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tag_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_radius_25_bg_9b9b9b"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/tag_add"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/tag_remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/common_radius_25_bg_9b9b9b"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/tag_remove"
                android:textColor="@color/color_333333" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
